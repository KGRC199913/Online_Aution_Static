<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta http-equiv="x-ua-compatible" content="ie=edge">
    <title>Five Leaves</title>
    <!-- Google Material Icon-->
    <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
    <!-- Font Awesome -->
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.8.2/css/all.css">
    <!-- Bootstrap core css -->
    <link href="/css/bootstrap.min.css" rel="stylesheet">
    <!-- Material Design Bootstrap -->
    <link href="/css/mdb.min.css" rel="stylesheet">
    <!-- Your custom styles (optional) -->
    <link href="/css/menupage.css" rel="stylesheet">
</head>
<!-- NAV -->
{{>nav}}

<body class="black-skin" style="margin-top: 80px">
    <!-- Main Grid Item-->

        <div class="row-md">
            <div class="input-group md-form form-sm form-1 px-3 round">
                <div class="input-group-prepend">
                    <span class="input-group-text black lighten-3" id="basic-text1"><i class="fas fa-search text-white"
                            aria-hidden="true"></i></span>
                </div>
                <input class=" form-control my-0 py-1" type="text" placeholder="Search" aria-label="Search">
                <select class="form-control-sm-1 input-group-text browser-default">
                    <optgroup label="Giá">
                        <option value="1">Giá giảm dần</option>
                        <option value="2">Giá tăng dần</option>
                    </optgroup>
                    <optgroup label="Thời gian">
                        <option value="3">Thời gian giảm dần</option>
                        <option value="4">Thời gian tăng dần</option>
                    </optgroup>
                </select>
            </div>
            <!-- Grid Item-->
            <div class="d-flex flex-wrap">
                {{>itemlist}}
            </div>
            <div class="central">
                {{>pagination}}
            </div>
        </div>
        {{>btnToTop}}

        <!-- SCRIPTS -->
        <!-- JQuery -->
        <script type="text/javascript" src="/js/jquery-3.4.1.min.js"></script>
        <!--Custom Javascript -->
        <script type="text/javascript" src="/js/sideNavBtn.js"></script>
        <script type="text/javascript" src="/js/btnToTop.js"></script>
        <script type="text/javascript" src="/js/menupage.js"></script>
        <!-- Bootstrap tooltips -->
        <script type="text/javascript" src="/js/popper.min.js"></script type="text/javascript" src="/js/menupage.js"></script>
        <!-- Bootstrap core JavaScript -->
        <script type="text/javascript" src="/js/bootstrap.min.js"></script>
        <!-- MDB core JavaScript -->
        <script type="text/javascript" src="/js/mdb.min.js"></script>
</body>
<!-- FOOTER -->
{{>footer}}

</html>